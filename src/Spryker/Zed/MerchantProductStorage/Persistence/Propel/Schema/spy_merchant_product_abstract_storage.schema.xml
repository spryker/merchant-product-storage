<?xml version="1.0"?>
<database xmlns="spryker:schema-01"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          name="zed"
          xsi:schemaLocation="spryker:schema-01 https://static.spryker.com/schema-01.xsd"
          namespace="Orm\Zed\MerchantProductStorage\Persistence" package="src.Orm.Zed.MerchantProductStorage.Persistence">

    <table name="spy_merchant_product_abstract_storage" identifierQuoting="true">
        <column name="id_product_abstract_merchant_storage" required="true" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="fk_product_abstract" required="true" type="INTEGER"/>

        <index name="spy_merchant_product_abstract_storage-id_product_abstract">
            <index-column name="fk_product_abstract"/>
        </index>

        <id-method-parameter value="spy_merchant_product_abstract_storage_pk_seq"/>

        <behavior name="synchronization">
            <parameter name="resource" value="merchant_product_abstract"/>
            <parameter name="key_suffix_column" value="fk_product_abstract"/>
            <parameter name="queue_group" value="sync.storage.merchant_product_abstract"/>
        </behavior>
        <behavior name="timestampable"/>
    </table>
</database>
